<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="500dp"
    android:layout_height="320dp"
    android:layout_gravity="center"
    app:ignore="NamespaceTypo"
    card_view:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_title_layout"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <ImageView
                    android:id="@+id/img_back_pop"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    />

            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/cpb_countdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="作答统计"
            android:textSize="20sp"
            app:valueTextColor="@color/white" />

        <LinearLayout
            android:id="@+id/ll_option1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/option_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="@color/app_color_white" />

                <com.example.flutter_app.widget.CustomHorizontalProgresNoNum
                    android:id="@+id/progress_1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:progress="60"
                    app:HorizontalProgresReachColor="#2E9AFE"
                    app:HorizontalProgresTextColor="#A4A4A4"
                    app:HorizontalProgresUnReachColor="#A4A4A4" />

                <TextView
                    android:id="@+id/txt_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="60%"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_option2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/option_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="B"

                    android:textColor="@color/app_color_white" />

                <com.example.flutter_app.widget.CustomHorizontalProgresNoNum
                    android:id="@+id/progress_2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:progress="30"
                    app:HorizontalProgresReachColor="#2E9AFE"
                    app:HorizontalProgresTextColor="#A4A4A4"
                    app:HorizontalProgresUnReachColor="#A4A4A4" />

                <TextView
                    android:id="@+id/txt_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="30%"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_option3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/option_3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="C"

                    android:textColor="@color/app_color_white" />

                <com.example.flutter_app.widget.CustomHorizontalProgresNoNum
                    android:id="@+id/progress_3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:progress="20"
                    app:HorizontalProgresReachColor="#2E9AFE"
                    app:HorizontalProgresTextColor="#A4A4A4"
                    app:HorizontalProgresUnReachColor="#A4A4A4" />

                <TextView
                    android:id="@+id/txt_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="20%"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_option4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/option_4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="D"
                    android:textColor="@color/app_color_white" />

                <com.example.flutter_app.widget.CustomHorizontalProgresNoNum
                    android:id="@+id/progress_4"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:progress="90"
                    app:HorizontalProgresReachColor="#2E9AFE"
                    app:HorizontalProgresTextColor="#A4A4A4"
                    app:HorizontalProgresUnReachColor="#A4A4A4" />

                <TextView
                    android:id="@+id/txt_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="90%"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_optionright"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/option_right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="√"
                    android:textColor="@color/app_color_white" />

                <com.example.flutter_app.widget.CustomHorizontalProgresNoNum
                    android:id="@+id/progress_right"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:progress="90"
                    app:HorizontalProgresReachColor="#2E9AFE"
                    app:HorizontalProgresTextColor="#A4A4A4"
                    app:HorizontalProgresUnReachColor="#A4A4A4" />

                <TextView
                    android:id="@+id/txt_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="90%"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_optionwrong"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/option_wrong"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="×"
                    android:textColor="@color/app_color_white" />

                <com.example.flutter_app.widget.CustomHorizontalProgresNoNum
                    android:id="@+id/progress_wrong"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:progress="90"
                    app:HorizontalProgresReachColor="#2E9AFE"
                    app:HorizontalProgresTextColor="#A4A4A4"
                    app:HorizontalProgresUnReachColor="#A4A4A4" />

                <TextView
                    android:id="@+id/txt_wrong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="90%"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_myanswer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txt_standardanswer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#FA771C"
                    android:textSize="15sp" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

